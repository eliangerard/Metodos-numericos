<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryVariant"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="411dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="64dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="9dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvBis"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="3dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clBiseccion"
                                android:layout_width="match_parent"
                                android:layout_height="90dp">

                                <ImageView
                                    android:id="@+id/imvBiseccion"
                                    android:layout_width="40dp"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="20dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/bisecc" />

                                <TextView
                                    android:id="@+id/txvBiseccion"
                                    android:layout_width="184dp"
                                    android:layout_height="46dp"
                                    android:fontFamily="@font/montserratsemibold"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="8dp"
                                    android:text="Bisección"
                                    android:textColor="?android:attr/colorForeground"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/btnBiseccion"
                                    app:layout_constraintHorizontal_bias="0.481"
                                    app:layout_constraintStart_toEndOf="@+id/imvBiseccion"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btnBiseccion"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="16dp"
                                    app:cardCornerRadius="11dp"
                                    app:cardElevation="5dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageButton
                                        android:id="@+id/imbBiseccion"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="#00FFFFFF"
                                        android:scaleType="centerCrop"
                                        app:srcCompat="@drawable/ic_righta"
                                        app:tint="?android:attr/colorForeground"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </androidx.cardview.widget.CardView>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="2dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clFP"
                                android:layout_width="match_parent"
                                android:layout_height="90dp">

                                <ImageView
                                    android:id="@+id/imvFP"
                                    android:layout_width="40dp"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="20dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/falsap" />

                                <TextView
                                    android:id="@+id/txvFP"
                                    android:layout_width="184dp"
                                    android:layout_height="46dp"
                                    android:fontFamily="@font/montserratsemibold"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="8dp"
                                    android:text="Falsa Posición"
                                    android:textColor="?android:attr/colorForeground"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/cvwFP"
                                    app:layout_constraintHorizontal_bias="0.481"
                                    app:layout_constraintStart_toEndOf="@+id/imvFP"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvwFP"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="16dp"
                                    app:cardCornerRadius="11dp"
                                    app:cardElevation="5dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageButton
                                        android:id="@+id/imbFP"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="#00FFFFFF"
                                        android:scaleType="centerCrop"
                                        app:srcCompat="@drawable/ic_righta"
                                        app:tint="?android:attr/colorForeground"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </androidx.cardview.widget.CardView>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="1dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clNR"
                                android:layout_width="match_parent"
                                android:layout_height="90dp">

                                <ImageView
                                    android:id="@+id/imvNR"
                                    android:layout_width="40dp"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="20dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/nrr" />

                                <TextView
                                    android:id="@+id/txvNR"
                                    android:layout_width="184dp"
                                    android:layout_height="46dp"
                                    android:fontFamily="@font/montserratsemibold"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="8dp"
                                    android:text="Newton Raphson"
                                    android:textColor="?android:attr/colorForeground"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/cvwNR"
                                    app:layout_constraintHorizontal_bias="0.481"
                                    app:layout_constraintStart_toEndOf="@+id/imvNR"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvwNR"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="16dp"
                                    app:cardCornerRadius="11dp"
                                    app:cardElevation="5dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageButton
                                        android:id="@+id/imbNR"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="#00FFFFFF"
                                        android:scaleType="centerCrop"
                                        app:srcCompat="@drawable/ic_righta"
                                        app:tint="?android:attr/colorForeground"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </androidx.cardview.widget.CardView>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clSecante"
                                android:layout_width="match_parent"
                                android:layout_height="90dp">

                                <ImageView
                                    android:id="@+id/imvSecante"
                                    android:layout_width="40dp"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="20dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/sec" />

                                <TextView
                                    android:id="@+id/txvSecante"
                                    android:layout_width="184dp"
                                    android:layout_height="46dp"
                                    android:fontFamily="@font/montserratsemibold"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="8dp"
                                    android:text="Secante"
                                    android:textColor="?android:attr/colorForeground"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/cvwSecante"
                                    app:layout_constraintHorizontal_bias="0.481"
                                    app:layout_constraintStart_toEndOf="@+id/imvSecante"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvwSecante"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="16dp"
                                    app:cardCornerRadius="11dp"
                                    app:cardElevation="5dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageButton
                                        android:id="@+id/imbSecante"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="#00FFFFFF"
                                        android:scaleType="centerCrop"
                                        app:srcCompat="@drawable/ic_righta"
                                        app:tint="?android:attr/colorForeground"
                                        tools:ignore="SpeakableTextPresentCheck" />
                                </androidx.cardview.widget.CardView>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="9dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.507"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="3dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:fontFamily="@font/montserratsemibold"
                                android:gravity="center_vertical"
                                android:text="Arturo Misael Álvarez Gutierrez"
                                android:textAlignment="center"
                                android:textColor="?android:attr/colorForeground"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserratsemibold"
                                android:gravity="center_vertical"
                                android:text="Adrián Corral Quezada"
                                android:textAlignment="center"
                                android:textColor="?android:attr/colorForeground"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="1dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserratsemibold"
                                android:gravity="center_vertical"
                                android:text="Elian Ramiro Gerard Ramos"
                                android:textAlignment="center"
                                android:textColor="?android:attr/colorForeground"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserratsemibold"
                                android:gravity="center_vertical"
                                android:text="Jesús Adán Salazar Campos"
                                android:textAlignment="center"
                                android:textColor="?android:attr/colorForeground"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="68dp"
                    android:fontFamily="@font/montserratextrabold"
                    android:text="Métodos Numéricos"
                    android:textAlignment="viewStart"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnAjustes"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="11dp"
                    app:cardElevation="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/imbAjustes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_baseline_brightness_4_24"
                        app:tint="?android:attr/colorForeground"
                        tools:ignore="SpeakableTextPresentCheck" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logotec" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="152dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toStartOf="@+id/btnAjustes"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/tecnmlogo" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:fontFamily="@font/montserratextrabold"
                    android:text="Integrantes"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="36dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="ITCHII\nIng. en Sistemas Computacionales"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>